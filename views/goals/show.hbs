<div class="row">
    <div class="col s12 m8">
        <h3>
            {{goal.title}}
        </h3>
        <div class="card goal">
            <div class="card-content">
                <p><b>Start Date:</b>
                    {{formatDate goal.date "MMMM Do YYYY"}}</p>
                <p><b>Target Date:</b>
                    {{formatDate goal.targetDate "MMMM Do YYYY"}}</p>
                <p><b>Category:</b> {{goal.category}}</p>
                <p><b>Status:</b> {{goal.status}}</p>
                <div class="goal-body-box">
                    {{{goal.body}}}
                </div>
            </div>
        </div>
        <a href="javascript:history.back()" class="btn">Back</a>
    </div>
</div>